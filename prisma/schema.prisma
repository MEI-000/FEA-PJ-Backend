generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id          String   @id @default(uuid())
  username    String   @unique @db.VarChar(30)
  displayName String?  @db.VarChar(50)
  bio         String?  @db.Text
  avatarUrl   String?  @db.VarChar(255)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  followers   Follow[] @relation("user_followers")
  following   Follow[] @relation("user_following")
}

model Follow {
  id           String   @id @default(uuid())
  followerId   String
  followingId  String
  createdAt    DateTime @default(now())

  follower     User     @relation("user_following", fields: [followerId], references: [id], onDelete: Cascade)
  following    User     @relation("user_followers",  fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}